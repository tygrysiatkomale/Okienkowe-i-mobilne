<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.lab3schronisko.controller.ClientPanelController">
    <top>
        <HBox spacing="10" padding="10">
            <Label text="Choose shelter:"/>
            <ComboBox fx:id="shelterComboBox" prefWidth="200"/>
            <Label text="Filter animals:"/>
            <TextField fx:id="filterTestField" promptText="Enter name or species"/>
            <Button text="Filter" onAction="#handleFilter"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="animalTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="speciesColumn" text="Species" prefWidth="150"/>
                <TableColumn fx:id="ageColumn" text="Age" prefWidth="100"/>
                <TableColumn fx:id="conditionColumn" text="Condition" prefWidth="200"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" padding="10" alignment="CENTER">
            <Button text="Adopt Animal" onAction="#handleAdoptAnimal"/>
            <Button text=""
        </HBox>
    </bottom>
</BorderPane>
