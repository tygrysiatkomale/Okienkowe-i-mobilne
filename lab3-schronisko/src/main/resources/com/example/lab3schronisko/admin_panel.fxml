<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.lab3schronisko.controller.AdminPanelController">
    <top>
        <HBox spacing="10" padding="10">
            <Label text="Filter Shelters: "/>
            <TextField fx:id="filterTextField" promptText="Enter shelter name" />
            <Button text="Filter" onAction="#handleFilterShelters" fx:id="filterButton"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="shelterTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="nameColumn" text="Shelter name" prefWidth="300"/>
                <TableColumn fx:id="capacityColumn" text="Max capacity" prefWidth="300"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" padding="10" alignment="CENTER">
            <Button text="Dodaj Schronisko" onAction="#handleAddShelter" fx:id="addShelterButton"/>
            <Button text="UsuÅ„ Schronisko" onAction="#handleRemoveShelter" fx:id="removeShelterButton"/>
            <Button text="Edytuj Schronisko" onAction="#handleEditShelter" fx:id="editShelterButton"/>
            <Button text="Sortuj Schroniska" onAction="#handleSortShelter" fx:id="sortShelterButton"/>
        </HBox>
    </bottom>
</BorderPane>